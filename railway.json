{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "plan": "python@3.7"
    }
  },
  "deploy": {
    "startCommand": "waitress-serve --port=$PORT pesticide_project.wsgi:application",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
