{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "/bin/sh -c 'export PYTHONPATH=/app/pesticide_project && waitress-serve --port=$PORT pesticide_project.pesticide_project.wsgi:application'",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
